<odoo>
    <data>
        <record id="view_company_form_logo_report" model="ir.ui.view">
            <field name="name">res.company.form.logo.report</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
              <notebook position="inside">
                <page string="Reports">
                    <group>
                        <field name="report_logo" widget="image"  class="oe_avatar"/>
                        <field name="report_logo_width"/>
                    </group>
                </page>
              </notebook>
            </field>
        </record>
    </data>
</odoo>
